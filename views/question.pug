doctype htmls
html
  head
    title Forager
    link(rel='icon', href='/img/search-icon.PNG')
    link(href='https://fonts.googleapis.com/css?family=Lato|Raleway:200,300,400', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/css/styles.css')
    link(rel='stylesheet', href='/css/sidebar.css')
    link(rel='stylesheet', href='/css/tabs.css')
    link(rel='stylesheet', href='/css/question.css')
  body
    header#question-navbar
      .navbar-title.logo.unselectable
        .logo-text
            a(href="/")="FORAGER"
        .logo-loc
            a(href="/")=question._source.school
      .tabs-wrapper
        button.tab.active(name="question") Question
        button.tab(name="solution") Solution
      //- .navbar-title.question-title
      //-   a(href=question._source.src_link)=question._source.course + " " + question._source.term + " " + question._source.exam_type + " #" + question._source.number 
    #question.tab-content.active
      .question-area
        include includes/question-info
        .box#question-box
          img.scaled-image(src='/img/question.PNG')
    #solution.tab-content
      .question-area
        include includes/question-info
        .box#answer-box
          #blur
            img.scaled-image(src='/img/solution.PNG')
          button.button#remove-blur(type='button', onclick='removeBlur()') Show Solution
    script(src='https://code.jquery.com/jquery-3.2.1.slim.js', integrity='sha256-tA8y0XqiwnpwmOIl3SGAcFl2RvxHjA8qp0+1uCGmRmg=', crossorigin='anonymous')
    script(src='/js/tabs.js')
script.
  function removeBlur() {
    document.getElementById("remove-blur").remove();
    document.getElementById("blur").style.filter = 'blur(0px)';
  }

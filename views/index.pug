doctype html
html
  head
    title Forager
    link(rel='icon', href='/img/search-icon.PNG')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css')
    link(href='https://fonts.googleapis.com/css?family=Lato|Raleway:200,400', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/css/styles.css')
    link(rel='stylesheet', href='/css/index.css')
    link(rel='stylesheet', href='/css/search.css')
    link(rel='stylesheet', href='/css/sidebar.css')
  body.background-image
    .main-content
      header.front-title.unselectable.animated.fadeInUp
        h1#title Forager
        h2#subtitle Search real exam questions by class, topic, term, etc.
      form#search-box-index.animated.fadeInUp(action='/query', method='POST')
        input.search-bar(name='searchQuery', autofocus='', autocomplete='off')
        button.search-button(type='submit')
          i.fa.fa-search
      #sidebar
        i.fa.fa-close#close-button(onclick="closeSidebar()")
      #transparent-navbar.animated.fadeIn
        .navbar-item.unselectable
          i.fa.fa-info-circle#search-info(onclick="openSidebar()")
        .navbar-item.unselectable
          i.fa.fa-question-circle(onclick="navigate('about')")
    script(src='https://code.jquery.com/jquery-3.2.1.slim.js', integrity='sha256-tA8y0XqiwnpwmOIl3SGAcFl2RvxHjA8qp0+1uCGmRmg=', crossorigin='anonymous')
script.
  function openSidebar() {
    $("#sidebar").width(250);
  }

  function closeSidebar() {
    $("#sidebar").width(0);
  }

  function navigate(link) {
    window.location.href = `/${link}`;
  }

  $("i").click(function() {
    $(this).toggleClass("toggle");
  });